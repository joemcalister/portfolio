---
interface Props {
	title: string;
}

const { title } = Astro.props;

const description: string = "Joe McAlister is an award winning artist, skilled academic and trusted senior engineer. Described as 'relentlessly innovative' by the New York Times.";
const url: string = "https://joe.work/";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description}>
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<!-- Icons -->
		<link rel="apple-touch-icon" sizes="180x180" href="https://cdn1.joe.ac/favicons/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="https://cdn1.joe.ac/favicons/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="https://cdn1.joe.ac/favicons/favicon-16x16.png">
		<link rel="manifest" href="https://cdn1.joe.ac/favicons/site.webmanifest">
		<link rel="mask-icon" href="https://cdn1.joe.ac/favicons/safari-pinned-tab.svg" color="#333333">

		<!-- Facebook -->
		<meta property="og:type" content="website">
		<meta property="og:title" content={title}>
		<meta property="og:description" content={description}>
		<meta property="og:url" content={url}>
		<meta property="og:site_name" content={title}>

		<!-- Twitter -->
		<meta name="twitter:card" content="summary">
		<meta name="twitter:title" content={title}>
		<meta name="twitter:description" content={description}>
		<meta name="twitter:url" content={url}>

		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Serif:wght@400;500;600&display=swap" rel="stylesheet">
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--bg-color: #fff;
		--text-color: #000;
		--highlight-color: #dfe6e9;
		--link-color: #0052ff;

		--border-radius-s: 3px;

		--spacer-s: 5px;
		--spacer-m: 10px;
		--spacer-l: 20px;
		--spacer-xl: 30px;
		--spacer-2xl: 60px;
	}
	@media (prefers-color-scheme: dark) {
		:root {
			--bg-color: #131313;
			--text-color: #fff;
			--highlight-color: #333;
			--link-color: #216aff;
		}
	}
	html {
		font-family:
			IBM Plex Serif,
			serif;
		color: var(--text-color);
		background: var(--bg-color);
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
	}
	.material-symbols-outlined {
		font-variation-settings:
			'FILL' 0,
			'wght' 300,
			'GRAD' 0,
			'opsz' 24
	}
	h1 {
		font-size: 100%;
		margin: 0;
		padding: 0;
		font-weight: 600;
	}
	h2 {
		font-size: 110%;
		font-weight: 500;
	}
	p {
		margin: 0;
		padding: var(--spacer-s) 0;
	}
	a, a:visited {
		color: var(--text-color);
		transition: 0.3s;
	}
	a:hover {
		color: var(--link-color);
	}
</style>
